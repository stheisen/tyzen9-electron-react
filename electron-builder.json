{
    "appId": "com.tyzen9.electronReact",
    "productName": "Tyzen9-electron-react",
    "directories": {
        "buildResources": "resources/icons",
        "output": "dist"
    },
    "files": [
        "build/**/*",
        "app/electron/**/*",
        "node_modules/**/*",
        {
            "from": "resources/icons",
            "to": "build"
        }
    ],
    "mac": {
        "target": "dmg"
    },
    "win": {
        "target": "nsis"
    },
    "linux": {
        "target": "deb",
        "category": "Utility",
        "synopsis": "Boilerplate application to demonstrate a packaged React application using Electron."
    }
}